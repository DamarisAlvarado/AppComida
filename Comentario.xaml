<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppComida.Comentario"
             xmlns:viewmodel="clr-namespace:AppComida.ViewModels"
             xmlns:model="clr-namespace:AppComida.Models"
             x:DataType="viewmodel:Comentarios"
             BackgroundColor="{StaticResource Quinto}"
             Title="Comentarios">

    <ScrollView>
        <VerticalStackLayout>
            <Label Margin="30" FontSize="Medium"  TextColor="{StaticResource White}" Text="Agrega sugerencias y mÃ¡s" />
            <Grid RowDefinitions="Auto"
                ColumnDefinitions=".15*,.35*,.30*"
                Padding="10"
                RowSpacing="10"
                ColumnSpacing="10">

                <Button Text="Subir Imagen"
                Grid.Row="0" 
                Grid.Column="0"
                BackgroundColor="{StaticResource Primero}"
                TextColor="{StaticResource Quinto}"
                FontAttributes="Bold"   
                Command="{Binding CargarImagen}"        
                        />
                
                <Entry 
                Placeholder="Comentar"
                PlaceholderColor="{StaticResource Tercero}"
                Text="{Binding Texto}"
                TextColor="{StaticResource Quinto}"
                BackgroundColor="Beige"
                Grid.Row="0"
                Grid.Column="1"
               />
            
                <Button  Text="Agregar"        
                 Grid.Row="0" 
                 BackgroundColor="{StaticResource Primero}"
                 TextColor="{StaticResource Quinto}"
                 FontAttributes="Bold" 
                 Command="{Binding InsertarComentario}"
                 Grid.Column="2"/>

            </Grid>

            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding Comentario}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:ComentarioModel">
                            <Grid Padding="10">
                                <Frame Margin="10" HeightRequest="200" BackgroundColor="{StaticResource Segundo}" >
                                    <Grid ColumnSpacing="5" ColumnDefinitions="125,*">
                                        <Image  Source="{Binding Source}" Aspect="AspectFill" HeightRequest="150" Grid.Column="0"/>
                                        <Label Padding="20"  TextColor="{StaticResource Quinto}" FontAttributes="Bold" Text="{Binding Comentario}" Margin="10" VerticalTextAlignment="Center" Grid.Column="1"/>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>