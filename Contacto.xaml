            <Frame
                CornerRadius="12"
                HasShadow="True">
                <Label Text="Damaris"/>
            </Frame>
            <!--#endregion-->

        </VerticalStackLayout>
    </ScrollView>
    <!-- #endregion -->
    
</ContentPage>